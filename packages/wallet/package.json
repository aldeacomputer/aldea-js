{
  "name": "@aldea/wallet-lib",
  "description": "High level and versatile wallet tool for Aldea Blockchain",
  "packageManager": "yarn@3.2.3",
  "version": "0.0.1-beta.0",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/wallet-lib.bundle.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "main": "./dist/wallet-lib.bundle.cjs",
  "module": "./dist/wallet-lib.bundle.mjs",
  "browser": "./dist/wallet-lib.bundle.min.js",
  "unpkg": "./dist/wallet-lib.bundle.min.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "yarn build:ts && yarn build:es",
    "build:ts": "tsc",
    "build:es": "node esbuild.js",
    "test": "mocha"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "dependencies": {
    "@aldea/sdk-js": "workspace:^",
    "lowdb": "^6.0.0"
  },
  "devDependencies": {
    "@scure/bip39": "^1.2.0",
    "chai": "^4.3.7",
    "esbuild": "^0.15.10",
    "mocha": "^10.2.0",
    "typescript": "^4.8.4"
  }
}
