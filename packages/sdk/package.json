{
  "name": "@aldea/sdk",
  "description": "A Swiss Army knife for Aldea app developers.",
  "version": "0.0.1-beta.15",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/aldea.sdk.bundle.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "main": "./dist/aldea.sdk.bundle.cjs",
  "module": "./dist/index.js",
  "browser": "./dist/aldea.sdk.bundle.min.js",
  "unpkg": "./dist/aldea.sdk.bundle.min.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "run-s clean build:ts build:es",
    "build:ts": "tsc",
    "build:es": "node esbuild.js",
    "ci": "yarn test:local",
    "clean": "rimraf dist/* || true",
    "docs": "typedoc",
    "test": "run-s build test:browser test:local",
    "test:browser": "playwright test",
    "test:local": "ava"
  },
  "packageManager": "yarn@3.2.3",
  "dependencies": {
    "@aldea/core": "workspace:^",
    "ky": "^0.33.1",
    "ky-universal": "^0.11.0"
  },
  "devDependencies": {
    "@mxssfd/typedoc-theme": "^1.0.3",
    "@playwright/test": "^1.29.1",
    "@scure/bip39": "^1.2.0",
    "ava": "^4.3.3",
    "esbuild": "^0.15.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typedoc": "^0.23.23",
    "typescript": "^4.8.4"
  },
  "ava": {
    "concurrency": 4,
    "files": [
      "test/**/*.test.js",
      "!test/browser"
    ]
  }
}
