{
  "name": "@aldea/compiler",
  "description": "Compiles AssemblyScript code into Aldea-flavoured WASM packages.",
  "version": "0.0.1-beta.2",
  "license": "Apache-2.0",
  "type": "module",
  "bin": {
    "aldea": "bin/aldea.js"
  },
  "exports": {
    ".": "./dist/compiler.js",
    "./abi": {
      "types": "./dist/abi.d.ts",
      "default": "./dist/abi.js"
    },
    "./assembly.json": "./assembly.json"
  },
  "main": "./dist/compiler.js",
  "types": "./dist/compiler.d.ts",
  "files": [
    "bin/*",
    "dist/**/*",
    "lib/**/*",
    "src/**/*",
    "types/**/*",
    "assembly.json"
  ],
  "scripts": {
    "build": "run-s clean build:ts",
    "build:ts": "tsc && node scripts/build-dts.js",
    "clean": "rimraf dist/* || true",
    "ci": "yarn test:js",
    "test": "yarn build && yarn test:as && yarn test:js",
    "test:as": "asp --summary && yarn test:as:clean",
    "test:as:clean": "find lib/__tests__ -type f \\( -iname \\*.wasm -o -iname \\*.wat \\) -delete",
    "test:js": "ava"
  },
  "packageManager": "yarn@3.2.3",
  "dependencies": {
    "@noble/hashes": "^1.1.5",
    "@scure/base": "^1.1.1",
    "assemblyscript": "0.27.0",
    "cbor-redux": "^1.0.0-3",
    "commander": "^9.4.1",
    "comment-parser": "^1.3.1",
    "docblock": "^0.4.5"
  },
  "devDependencies": {
    "@as-pect/cli": "^8.0.1",
    "@assemblyscript/loader": "0.27.0",
    "@types/node": "^18.11.18",
    "ava": "^5.1.0",
    "concat": "^1.0.3",
    "dts-generator": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "ava": {
    "concurrency": 4,
    "files": [
      "test/**/*.test.js",
      "!test/support"
    ]
  },
  "stableVersion": "0.0.0-alpha.4"
}
