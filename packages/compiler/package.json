{
  "name": "@aldea/compiler",
  "description": "Compiles AssemblyScript code into Aldea-flavoured WASM packages.",
  "version": "0.2.5",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": "./dist/compiler.js",
    "./assembly.json": "./assembly.json"
  },
  "main": "./dist/compiler.js",
  "types": "./dist/compiler.d.ts",
  "files": [
    "dist/**/*",
    "lib/**/*",
    "src/**/*",
    "types/**/*",
    "assembly.json"
  ],
  "scripts": {
    "build": "run-s clean build:ts",
    "build:ts": "tsc && node scripts/build-dts.js",
    "clean": "rimraf dist/* || true",
    "ci": "yarn test:js",
    "test": "yarn build && yarn test:as && yarn test:js",
    "test:as": "asp --summary && yarn test:as:clean",
    "test:as:clean": "find lib/__tests__ -type f \\( -iname \\*.wasm -o -iname \\*.wat \\) -delete",
    "test:js": "ava"
  },
  "packageManager": "yarn@3.2.3",
  "dependencies": {
    "@aldea/core": "workspace:^",
    "assemblyscript": "npm:@aldea/assemblyscript@^0.1.0",
    "comment-parser": "^1.3.1"
  },
  "devDependencies": {
    "@as-pect/cli": "^8.1.0",
    "@assemblyscript/loader": "0.27.5",
    "@types/node": "^20.1.5",
    "ava": "^5.2.0",
    "concat": "^1.0.3",
    "dts-generator": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  },
  "ava": {
    "concurrency": 4,
    "files": [
      "test/**/*.test.js",
      "!test/support"
    ]
  }
}
