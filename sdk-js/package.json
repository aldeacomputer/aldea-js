{
  "name": "@aldea/sdk-js",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.ts.d"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.ts.d"
    }
  },
  "browser": "./dist/aldea.bundle.min.js",
  "unpkg": "./dist/aldea.bundle.min.js",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "run-s clean build:ts build:es",
    "build:ts": "tsc",
    "build:es": "node esbuild.js",
    "clean": "rimraf dist/*",
    "test": "yarn build:ts && ava"
  },
  "packageManager": "yarn@3.2.3",
  "dependencies": {
    "@noble/ed25519": "^1.7.1",
    "@noble/hashes": "^1.1.3",
    "@scure/base": "^1.1.1",
    "@scure/bip39": "^1.1.0",
    "micro-ed25519-hdkey": "^0.1.2"
  },
  "devDependencies": {
    "ava": "^4.3.3",
    "esbuild": "^0.15.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  },
  "ava": {
    "concurrency": 4
  }
}
